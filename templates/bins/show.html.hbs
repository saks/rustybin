{{#if dumps}}
  <div id="accordion">
    {{#each dumps}}
      <div class="card">
        <div class="card-header" id="heading-{{ @index }}">
          <h5 class="mb-0">
            <button class="btn btn-link collapsed"
                data-toggle="collapse"
                data-target="#collapse{{ @index }}"
                aria-expanded="false"
                aria-controls="collapse{{ @index }}">

              {{ method }} : {{ uri }} - {{ time }}
            </button>
          </h5>
        </div>

        <div id="collapse{{ @index }}"
            class="collapse"
            aria-labelledby="heading-{{ @index }}"
            data-parent="#accordion">

          <div class="card-body">

            <p>
              <a class="btn btn-primary"
                  data-toggle="collapse"
                  href="#collapseHeaders-{{ @index }}"
                  role="button"
                  aria-expanded="false"
                  aria-controls="collapseHeaders-{{ @index }}">
                Headers
              </a>
              {{#if url_params}}
                <a class="btn btn-primary"
                    data-toggle="collapse"
                    href="#collapseUrlParams-{{ @index }}"
                    role="button"
                    aria-expanded="false"
                    aria-controls="collapseUrlParams-{{ @index }}">
                  Url params
                </a>
              {{/if}}
            </p>

            <!-- headers -->
            <div class="collapse" id="collapseHeaders-{{ @index }}">
              <div class="card card-body">
                <table class="table">
                  {{#each headers}}
                    <tr>
                      <td>{{ @key }}</td>
                      <td>{{ this }}</td>
                    </tr>
                  {{/each}}
                </table>
              </div>
            </div>

            {{#if url_params}}
              <!-- url-params -->
              <div class="collapse" id="collapseUrlParams-{{ @index }}">
                <div class="card card-body">
                  <table class="table">
                    {{#each url_params}}
                      <tr>
                        <td>{{ @key }}</td>
                        <td>{{ this }}</td>
                      </tr>
                    {{/each}}
                  </table>
                </div>
              </div>
            {{/if}}

          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  No requests yet...
{{/if}}
